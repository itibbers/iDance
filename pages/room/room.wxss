.container {
  justify-content: space-between;
}

scroll-view {
  position: absolute;
  top: 0;
  bottom: 250px;
}

.song-name {
  margin-left: 16px;
}

.play-button {
  margin-right: 16px;
}

.currentSong {
  color: orangered;
}

.player {
  position: fixed;
  bottom: 0;
}

.page-body-wrapper {
  margin-top: 0;
  width: 100%;
  height: 250px;
  position: absolute;
  bottom: 0;
}

.page-body-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  margin-bottom: 50rpx;
  width: 100%;
  padding: 50rpx 0 50rpx 0;
}

.time-big {
  font-size: 60rpx;
  margin: 20rpx;
}

.slider {
  width: 650rpx;
}

.play-time {
  font-size: 28rpx;
  width: 700rpx;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.page-body-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 50rpx;
}

.page-body-button {
  width: 250rpx;
  text-align: center;
}

.page-body-button image {
  width: 150rpx;
  height: 150rpx;
}
